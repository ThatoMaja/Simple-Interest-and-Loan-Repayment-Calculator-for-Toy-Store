<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvPrincipalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Principal Amount:"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />


    <EditText
        android:id="@+id/editPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Enter Principal Amount:"
        android:layout_below="@id/tvPrincipalLabel"
        android:layout_marginTop="8dp"
        />


    <TextView
        android:id="@+id/tvRateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest Rate (%):"
        android:textSize="16sp"
        android:layout_below="@id/editPrincipal"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        />


    <EditText
        android:id="@+id/editRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Enter Rate (% per annum):"
        android:layout_below="@id/tvRateLabel"
        android:layout_marginTop="8dp"
        />


    <TextView
        android:id="@+id/tvTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Period:"
        android:textSize="16sp"
        android:layout_below="@id/editRate"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        />


    <EditText
        android:id="@+id/editTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Enter Time (in years):"
        android:layout_below="@id/tvTimeLabel"
        android:layout_marginTop="8dp"
        />


    <Button
        android:id="@+id/btnSimpleInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Simple Interest"
        android:layout_below="@id/editTime"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/btnLoanRepayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Loan Repayment"
        android:layout_below="@id/btnSimpleInterest"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:layout_below="@id/btnLoanRepayment"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Result will be displayed here"
        android:layout_below="@id/btnQuit"
        android:layout_marginTop="16dp"
        android:gravity="center"
        />

</RelativeLayout>

